{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts"],
        "jsx": "react-jsx",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "lib": ["es2022", "dom", "dom.iterable"]
    },
    "exclude": [
        "out-tsc",
        "dist",
        "jest.config.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.tsx",
        "src/**/*.test.tsx",
        "src/**/*.spec.js",
        "src/**/*.test.js",
        "src/**/*.spec.jsx",
        "src/**/*.test.jsx",
        "eslint.config.js",
        "eslint.config.cjs",
        "eslint.config.mjs"
    ],
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
    "references": [
        {
            "path": "../core-api/tsconfig.lib.json"
        },
        {
            "path": "../core-translations/tsconfig.lib.json"
        },
        {
            "path": "../core-routes/tsconfig.lib.json"
        },
        {
            "path": "../core-utils/tsconfig.lib.json"
        },
        {
            "path": "../core-api-models/tsconfig.lib.json"
        }
    ]
}
